{{ define "home" }}
    {{ template "header" . }}
            <div class="row">

                {{ range $.items}}
                    <div class="card border-0 col-lg-4 col-md-6 col-sm-12 p-1">
                        <a href="/product" class="btn">
                            <div class="card-body row">
                                <img src="{{ .picture }}" class="col-lg-4 col-sm-12" alt="..." style="max-height: 100%; min-height: 100%;">
                                <div class="col-lg-8 col-sm-12 flex-column align-self-end">
                                    <h5 class="card-title">
                                        {{ .title}}
                                    </h5>
                                </div>
                            </div>
                        </a>
                    </div>
                {{ end}}
            </div>
    {{ template "footer" . }}
{{ end }}
